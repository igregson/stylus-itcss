/*-----------------------------------------------

Trumps - Type

*/



.h1 { font-size: $h1 }
.h2 { font-size: $h2 }
.h3 { font-size: $h3 }
.h4 { font-size: $h4 }
.h5 { font-size: $h5 }
.h6 { font-size: $h6 }

.bold    { font-weight: $bold-font-weight }
.bold-2    { font-weight: $bold-font-weight-2 }
.regular { font-weight: normal }
.italic  { font-style: italic }
.space   { letter-spacing: .2em }
.space-1   { letter-spacing: 1px }
.space-2   { letter-spacing: 2px }
.space-3   { letter-spacing: 3px }
// Note: There seems to be a bug in Stylus' compiler
//       that prevents single line declarations when calling
//       functions.
.font-meta
  fontMeta()
.font-title 
  font-family: $font-fam-title
.caps
  caps()
.serif
  serif()
.sans
  sans()
.titlecase
  text-transform: capitalize
.t-light 
  light()
.heading-light
  font-weight: 500

.t-small   { font-size: 90% }
.t-small-9   { font-size: .9rem }

.t-muted, 
.t-gray          { color: $c-gray }

.t-white         { color: $c-white !important }
.t-orange        { color: $c-orange }
.t-blue          { color: $c-blue }
.t-blue-dark     { color: $c-blue-dark }
.t-default       { color: $c-type }
.t-hover-default:hover { color: $c-type }


.font-body  { font-family: $font-fam }

.left-align   { text-align: left }
.center       { text-align: center }
.right-align  { text-align: right }
.justify      { text-align: justify }

.nowrap     { white-space: nowrap }
.break-word { word-wrap: break-word }

.truncate
  max-width: 100%
  overflow: hidden
  text-overflow: ellipsis
  white-space: nowrap

.list-reset
  list-style: none
  padding-left: 0

.t-large
  font-size: 2rem

.serif
  font-family: $font-fam-serif

.t-no-wrap { white-space: nowrap }

.no-select
  noSelect()
.selectable
  selectable()

.line-0 { line-height: 0 }
.line-1 { line-height: 1 }
.line-1-3 { line-height: 1.3 }


.capitalize
  text-transform: capitalize

.heading-blue 
  color: $c-blue-dark
  font-weight: 700
  margin: 0

.pointer
  cursor: pointer
  
.no-outline // form inputs
  &:focus
    outline: none